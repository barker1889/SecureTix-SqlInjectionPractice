@model SecureTixWeb.Controllers.ViewComponents.ViewModels.LoginComponentViewModel

@if (Model.LoggedIn)
{
    <div class="nav-item">
        <a class="nav-link" asp-controller="Orders" asp-action="Index">My Orders</a>
    </div>
    <div class="nav-item">
        <a class="nav-link disabled">Logged in as @Model.UserName (@Model.UserRole)</a>
    </div>
    <div class="nav-item">
        <a asp-action="LogOut" asp-controller="Login" class="nav-link">Log out</a>
    </div>
}
else
{
    <div class="nav-item">
        <a asp-action="Index" asp-controller="Login" class="nav-link">Log in</a>
    </div>
}